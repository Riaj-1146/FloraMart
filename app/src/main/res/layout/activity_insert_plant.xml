<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="Insert a New Plant"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_image"
        android:src="@drawable/demo_icon"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:background="#FBF8F8" />

    <EditText
        android:id="@+id/et_plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Plant Name"
        android:background="@android:drawable/editbox_background"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_plant_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Plant Category"
        android:background="@android:drawable/editbox_background"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_plant_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Plant Price"
        android:inputType="numberDecimal"
        android:background="@android:drawable/editbox_background"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_plant_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Available Quantity"
        android:inputType="number"
        android:background="@android:drawable/editbox_background"
        android:textSize="18dp" />

    <Button
        android:id="@+id/bt_choose_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Image from File"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0A6E80" />

    <Button
        android:id="@+id/bt_insert_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Plant"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0A6E80" />

</LinearLayout>
